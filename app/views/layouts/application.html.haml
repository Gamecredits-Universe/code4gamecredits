!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %link{href: image_path("GMCoin.png"), rel: "shortcut icon"}/
    
    %title= content_for?(:title) ? yield(:title) : "Code4gamecredits"

    %meta{name: 'description', content: (content_for?(:title) ? yield(:title) : "Donate gamecredits to open source projects or make commits and get tips for it.")}
    %meta{name: 'keywords', content: 'open source,contribute,github,community,git,bitcoin,gamecredits,gmc,tips,perks'}
    / %meta{:property => 'og:image', :content => asset_path('logo.png')}
    / %link{:rel => 'image_src', :type => 'image/png', :href => asset_path('logo.png')}

    = stylesheet_link_tag    "application", media: "all", data: { "turbolinks-track" => true }
    = javascript_include_tag "application", data: { "turbolinks-track" => true }

    /[if lt IE 9]
      %script{:src => "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
      %script{:src => "https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"}


    
    = csrf_meta_tags
  %body{data: {environment: Rails.env}}
    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-11108334-6', 'code4gamecredits.com');
        ga('send', 'pageview');
    #top-bar
      .container
        #session-menu
          - if current_user
            = link_to current_user.full_name, edit_registration_path(current_user), class: "edit-profile-link"
            = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-default"
          - else
            = link_to "Sign in", new_user_session_path(return_url: request.url), class: "btn btn-default"
        %a#main-logo{href: root_path}
          %h3 Code4gamecredits
        = render 'common/menu'
        = render_flash_message
    #main-content
      - if content_for?(:main_content)
        = yield :main_content
      - else
        .container#main-container
          = yield
    #footer
      .container
        / Site footer
        .footer
          %p
            Â©
            = link_to 'Code4gamecredits', 'http://code4gamecredits.com/', target: '_blank'
            2014. Source code is available at #{link_to('github', 'https://github.com/sigmike/code4gamecredits', target: '_blank')},
            based on #{link_to "Tip4commit", "http://tip4commit.com/"}.
            You can support its development with
            = link_to('gamecredits', 'http://code4gamecredits.com/projects/1')
            or
            = link_to('bitcoins', 'http://tip4commit.com/projects/560')
    / /container
